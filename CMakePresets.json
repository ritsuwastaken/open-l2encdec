{
    "version": 8,
    "configurePresets": [
        {
            "name": "unix",
            "displayName": "Unix preset",
            "description": "Sets Unix Makefiles generator and build directory",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build_unix/",
            "condition": {
                "type": "notEquals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "msvc",
            "displayName": "MSVC preset",
            "description": "Sets Visual Studio generator and build directory",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build_msvc/",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static"
            }
        },
        {
            "name": "mingw",
            "displayName": "MinGW preset",
            "description": "Sets MinGW generator and build directory",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build_mingw/",
            "toolchainFile": "${sourceDir}/cmake/mingw-w64-x86_64.cmake",
            "condition": {
                "type": "notEquals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "msvc-build",
            "description": "",
            "displayName": "",
            "configurePreset": "msvc",
            "configuration": "Release"
        },
        {
            "name": "unix-build",
            "description": "",
            "displayName": "",
            "configurePreset": "unix",
            "configuration": "Release"
        },
        {
            "name": "mingw-build",
            "description": "Build using MinGW toolchain",
            "displayName": "MinGW Build",
            "configurePreset": "mingw",
            "configuration": "Release"
        }
    ]
}